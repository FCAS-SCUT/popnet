    "version": "0.2.0",
    "configurations": [
        {
            "name": "g++ - 生成和调试活动文件",
            "type": "cppdbg",
            "request": "launch",
            "program": "${fileDirname}/../popnet",
            "args": ["-A", "9", 
                "-c", "2", 
                "-V", "3", 
                "-B", "12", 
                "-O", "12", 
                "-F", "4", 
                "-L", "1000", 
                "-T", "20000", 
                "-r", "0", 
                "-I", "./random_trace/bench", 
                "-R", "0"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "为 gdb 启用整齐打印",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "C/C++: g++ build active file",
            "miDebuggerPath": "/usr/bin/gdb"
        }
    ]
}